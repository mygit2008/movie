<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:paddingLeft="15px" android:paddingRight="15px"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="match_parent">

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_margin="15px"
        fresco:placeholderImage="@mipmap/hiyou_logo"
        android:id="@+id/cinemas_img"
        android:layout_width="200px"
        android:layout_height="150px" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_toRightOf="@id/cinemas_img"
        android:layout_width="match_parent"
        android:layout_marginRight="30px"
        android:layout_weight="1"
        android:layout_height="200px">
        <TextView
            android:textSize="32px"
            android:textStyle="bold"
            android:layout_margin="10px"
            android:id="@+id/cinemas_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/cinemas_address"
            android:paddingRight="40px"
            android:gravity="center_vertical"
            android:layout_width="400px"
            android:textSize="24px"
            android:layout_height="match_parent"/>

    </LinearLayout>
    <TextView
        android:layout_alignParentRight="true"
        android:background="@mipmap/access_icon"
        android:layout_width="40px"
        android:layout_centerVertical="true"
        android:layout_height="40px" />
</RelativeLayout>