<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bw.Movie.activity.UserInfoActivity">
    <RelativeLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <ImageView
            android:id="@+id/userinfo_back"
            android:layout_centerVertical="true"
            android:layout_width="150px"
            android:src="@mipmap/left"
            android:padding="20px"
            android:layout_height="match_parent" />
        <TextView
            android:text="会员中心"
            android:textSize="40px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_alignParentRight="true"
            android:background="@mipmap/update_userinfo"
            android:gravity="center_vertical"
            android:id="@+id/update_userinfo"
            android:layout_margin="20px"
            android:layout_width="50px"
            android:layout_height="70px" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="40px"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginLeft="50px"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="头像"
            android:layout_centerVertical="true"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/userinfo_img"
            android:layout_centerVertical="true"
            fresco:actualImageScaleType="centerCrop"
            fresco:placeholderImage="@mipmap/hiyou_logo"
            fresco:placeholderImageScaleType="centerCrop"
            fresco:roundAsCircle="true"
            android:layout_marginRight="100px"
            android:layout_alignParentRight="true"
            android:layout_width="80px"
            android:layout_height="80px" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        />
    <RelativeLayout
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="昵称"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/userinfo_nickname"
            android:layout_marginRight="100px"
            android:textSize="30px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        />
    <RelativeLayout
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="性别"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="30px"
            android:id="@+id/userinfo_sex"
            android:layout_marginRight="100px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        />
    <RelativeLayout
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="出生日期"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textSize="30px"
            android:id="@+id/userinfo_birthday"
            android:layout_marginRight="100px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        />
    <RelativeLayout
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="登录时间"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="30px"
            android:id="@+id/userinfo_email"
            android:layout_marginRight="100px"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="50px"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    <!--<RelativeLayout
        android:id="@+id/xiugaimima"
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="修改密码"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:background="@mipmap/access_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_width="30px"
            android:layout_height="30px" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        />-->
    <RelativeLayout
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="绑定手机号"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/j"
            android:background="@mipmap/access_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_width="30px"
            android:layout_height="30px" />
        <TextView
            android:textSize="30px"
            android:id="@+id/userinfo_phone"
            android:layout_toLeftOf="@id/j"
            android:layout_marginRight="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:layout_marginLeft="40px"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black"
        />
    <RelativeLayout
        android:id="@+id/bangdingwx"
        android:layout_marginLeft="50px"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="80px">
        <TextView
            android:text="绑定微信号"
            android:textSize="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/j3"
            android:background="@mipmap/access_icon"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50px"
            android:layout_width="30px"
            android:layout_height="30px" />
        <TextView
            android:id="@+id/userinfo_wechat"
            android:text="未绑定"
            android:textSize="30px"
            android:layout_toLeftOf="@id/j3"
            android:layout_marginRight="50px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/tuichudenglu"
        android:layout_margin="50px"
        android:background="@color/red"
        android:textColor="@color/white"
        android:text="退出登录"
        android:layout_width="match_parent"
        android:layout_height="80px" />
</LinearLayout>
