<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10px">

    <ImageView
        android:id="@+id/movies_byid_picture"
        android:layout_width="0px"
        android:layout_height="250px"
        android:layout_weight="1"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="match_parent"
        android:layout_marginLeft="15px"
        android:layout_marginTop="20px"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/movies_byid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="007:大破天幕危机"
            android:textSize="32px" />

        <TextView
            android:id="@+id/movies_byid_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="007:大破天幕危机"
            android:textSize="24px" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10px"
            android:layout_marginRight="20px"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/movies_byid_type"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="left"
                android:text="007:大破天幕危机"
                android:textSize="24px" />

            <TextView
                android:id="@+id/movies_byid_origin"
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="007:大破天幕危机"
                android:textSize="24px" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_weight="3"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/movies_byid_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="007:大破天幕危机"
                    android:textSize="24px" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/coffee" />

                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/car" />

                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/sand" />

                    <ImageView
                        android:layout_width="40px"
                        android:layout_height="40px"
                        android:layout_marginLeft="10px"
                        android:src="@mipmap/vipbox" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0px"
                android:layout_height="wrap_content"
                android:layout_marginTop="10px"
                android:layout_weight="2"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/movies_byid_guan"
                    android:layout_width="0px"
                    android:layout_height="50px"
                    android:layout_weight="1"
                    android:background="#f3f3f3"
                    android:text="关注"
                    android:textSize="24px" />

                <Button
                    android:id="@+id/movies_byid_fen"
                    android:layout_width="0px"
                    android:layout_height="50px"
                    android:layout_marginLeft="5px"
                    android:layout_weight="1"
                    android:background="#f3f3f3"
                    android:text="分享"
                    android:textSize="24px" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>