<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    tools:context="com.bw.Movie.activity.DetailsActivity">
    <RelativeLayout
        android:id="@+id/title_out"
        android:layout_width="match_parent"
        android:background="#01C7B4"
        android:layout_height="100px">
        <ImageView
            android:id="@+id/back_img"
            android:layout_width="60px"
            android:layout_height="60px"
            android:layout_marginLeft="10px"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="影院-影片"
            android:textStyle="bold"
            android:textSize="40px"
            android:textColor="#fff"
            android:gravity="center"
            />

    </RelativeLayout>
    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:layout_below="@id/title_out"
        />
    <RelativeLayout
        android:id="@+id/yy_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5px"
        android:background="#fff"
        android:layout_below="@id/view"
        android:padding="10px"
        >
        <ImageView
            android:id="@+id/y_img"
            android:layout_width="150px"
            android:layout_height="150px"

            />
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@id/y_img"
            android:text="新影联·华谊兄弟影院"
            android:textColor="#797979"
            android:textSize="36px" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/y_img"
            android:layout_below="@+id/title"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            android:layout_marginTop="20px">

            <TextView
                android:id="@+id/address"
                android:layout_width="500px"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="广顾北大街16号望京华彩商业中心B1100102"
                android:textColor="#848484"
                android:gravity="center_vertical"
                android:textSize="28px" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@id/y_img"
            android:layout_marginLeft="10px"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/rl"
            android:layout_marginTop="15px">
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="5px"
                android:src="@mipmap/coffee"
                />
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="5px"
                android:src="@mipmap/car"
                />
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="5px"
                android:src="@mipmap/sand"
                />
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="5px"
                android:src="@mipmap/max"
                />
            <ImageView
                android:layout_width="50px"
                android:layout_height="50px"
                android:layout_marginLeft="5px"
                android:src="@mipmap/vipbox"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll"
            android:layout_marginTop="20px"
            android:text="订票热线:57620488"
            android:textSize="28px"
            android:textColor="#842913"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:background="@drawable/text_shape"/>
        <TextView
            android:id="@+id/g_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="关注影院"
            android:layout_below="@+id/ll"
            android:layout_marginTop="20px"
            android:layout_toRightOf="@+id/tel"
            android:textSize="28px"
            android:layout_marginLeft="20px"
            android:paddingLeft="30px"
            android:paddingRight="30px"
            android:paddingBottom="10px"
            android:paddingTop="10px"
            android:background="@drawable/text_shape2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/yy_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:padding="15px"
            android:background="#01C7B4"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:layout_height="112px">
            <TextView
                android:id="@+id/but1"
                android:layout_weight="1"
                android:text="今日"
                android:textSize="32px"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/shape"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="match_parent" />
            <TextView
                android:id="@+id/but2"
                android:layout_weight="1"
                android:text="明日"
                android:textSize="32px"
                android:gravity="center"
                android:textColor="#fff"
                android:textStyle="bold"
                android:background="@drawable/shape4"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>
        <ListView
            android:id="@+id/lv"
            android:layout_below="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:dividerHeight="20px"
            ></ListView>
    </RelativeLayout>

</RelativeLayout>
