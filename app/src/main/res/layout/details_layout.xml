<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25px"
    android:layout_marginRight="25px">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新影联·华谊兄弟影院"
        android:textColor="#797979"
        android:textSize="40px" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:gravity="center_vertical"
        android:layout_marginTop="20px">

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广顾北大街16号望京华彩商业中心B1100102"
            android:textColor="#848484"
            android:gravity="center_vertical"
            android:textSize="32px" />

        <ImageView
            android:layout_width="30px"
            android:layout_height="30px"
            android:layout_marginLeft="10px"
            android:layout_toRightOf="@+id/address"
            android:src="@mipmap/location_img"
            android:layout_centerVertical="true"/>
        <ImageView
            android:layout_width="35px"
            android:layout_height="35px"
            android:layout_alignParentRight="true"
            android:src="@mipmap/right_img"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="200px"
        android:layout_height="40px"
        android:orientation="horizontal"
        android:layout_below="@+id/rl"
        android:background="#FE9A00"
        android:layout_marginTop="15px">

    </LinearLayout>
    <TextView
        android:id="@+id/tel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll"
        android:layout_marginTop="20px"
        android:text="订票热线:57620488"
        android:textSize="32px"
        android:textColor="#842913"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:background="@drawable/text_shape"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关注影院"
        android:layout_below="@+id/ll"
        android:layout_marginTop="20px"
        android:layout_toRightOf="@+id/tel"
        android:textSize="32px"
        android:layout_marginLeft="20px"
        android:paddingLeft="30px"
        android:paddingRight="30px"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:background="@drawable/text_shape2"/>
</RelativeLayout>
