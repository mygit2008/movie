<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.bw.Movie.activity.GouPiaoJiLuActivity">

    <RelativeLayout
        android:id="@+id/gpjl_head"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="100px">
        <ImageView
            android:id="@+id/gpjl_back"
            android:layout_centerVertical="true"
            android:layout_width="150px"
            android:src="@mipmap/left"
            android:padding="20px"
            android:layout_height="match_parent" />
        <TextView
            android:text="购票记录"
            android:textSize="40px"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="40px"
        android:layout_below="@id/gpjl_head"
        android:visibility="gone"
        android:id="@+id/gpjl_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <RelativeLayout
        android:id="@+id/none_gpjl_relate"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/none_gpjl_img"
            android:layout_centerInParent="true"
            android:src="@mipmap/none_guanzhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/none_gpjl_img"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100px"
            android:text="您还没有看过影片呢~"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</RelativeLayout>
