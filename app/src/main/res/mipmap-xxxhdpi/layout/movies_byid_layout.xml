<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    android:orientation="horizontal"
    android:padding="10px"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_weight="1"
        android:id="@+id/movies_byid_picture"
        android:layout_width="0px"
        android:layout_height="250px"
        android:src="@mipmap/ic_launcher"/>
    <LinearLayout
        android:layout_marginLeft="15px"
        android:orientation="vertical"
        android:layout_weight="4"
        android:layout_width="0px"
        android:layout_height="match_parent">
        <TextView
            android:text="007:大破天幕危机"
            android:textSize="21px"
            android:id="@+id/movies_byid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:text="007:大破天幕危机"
            android:textSize="18px"
            android:maxLines="1"
            android:ellipsize="end"
            android:id="@+id/movies_byid_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginTop="5px"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="007:大破天幕危机"
                android:textSize="16px"
                android:layout_weight="2"
                android:gravity="left"
                android:id="@+id/movies_byid_type"
                android:layout_width="0px"
                android:layout_height="wrap_content" />
            <TextView
                android:text="007:大破天幕危机"
                android:textSize="16px"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/movies_byid_origin"
                android:layout_width="0px"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_marginTop="5px"
            android:layout_weight="3"
            android:layout_width="0px"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:text="007:大破天幕危机"
                android:textSize="16px"
                android:id="@+id/movies_byid_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="5px"
                    android:layout_width="25px"
                    android:layout_height="20px"
                    android:src="@mipmap/coffee"/>
                <ImageView
                    android:layout_marginLeft="5px"
                    android:layout_width="25px"
                    android:layout_height="20px"
                    android:src="@mipmap/car"/>
                <ImageView
                    android:layout_marginLeft="5px"
                    android:layout_width="25px"
                    android:layout_height="20px"
                    android:src="@mipmap/sand"/>
                <ImageView
                    android:layout_marginLeft="5px"
                    android:layout_width="25px"
                    android:layout_height="20px"
                    android:src="@mipmap/vipbox"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5px"
            android:orientation="horizontal"
            android:layout_weight="2"
            android:layout_width="0px"
            android:layout_height="wrap_content">
            <Button

                android:background="#f3f3f3"
                android:text="关注"
                android:textSize="20px"
                android:id="@+id/movies_byid_guan"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="50px" />
            <Button
                android:background="#f3f3f3"
                android:layout_marginLeft="5px"
                android:text="分享"
                android:textSize="20px"
                android:id="@+id/movies_byid_fen"
                android:layout_weight="1"
                android:layout_width="0px"
                android:layout_height="50px" />
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>