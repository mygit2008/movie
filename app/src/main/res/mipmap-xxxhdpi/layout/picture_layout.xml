<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="@mipmap/shangbb"
        android:layout_width="match_parent"
        android:layout_height="120px">
        <TextView
            android:id="@+id/picture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="北京"
            android:textSize="20px"
            android:layout_marginLeft="15px"
            android:textColor="#fff"
            android:textStyle="bold"
            />
        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/picture_img"
            android:layout_marginLeft="-10px"
            android:layout_width="60px"
            android:layout_height="50px"
            android:src="@mipmap/xiala"
            android:layout_toRightOf="@id/picture"
            />
        <LinearLayout
            android:id="@+id/ll"
            android:layout_toRightOf="@id/picture_img"
            android:background="@drawable/shape_l"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_height="53px">
            <Button
                android:id="@+id/picture_change_1"
                android:background="@drawable/shape"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:text="热门影片"
                android:textColor="#fff"
                />
            <Button
                android:id="@+id/picture_change_2"
                android:background="#12345678"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:text="正在上映"
                android:textColor="#fff"
                />
            <Button
                android:id="@+id/picture_change_3"
                android:background="#12345678"
                android:layout_width="wrap_content"
                android:layout_height="50px"
                android:text="即将上映"
                android:textColor="#fff"
                />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="20px"
            android:id="@+id/lei_zhuanhuan"
            android:layout_width="50px"
            android:layout_height="60px"
            android:src="@mipmap/shu"
            android:layout_marginRight="30px"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_lt"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#77220e"
        >
    </LinearLayout>

</com.zhy.autolayout.AutoLinearLayout>